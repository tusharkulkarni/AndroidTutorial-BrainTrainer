<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.tushar.braintrainer.MainActivity"
    android:padding="0dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO!"
        android:id="@+id/startButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="80sp"
        android:padding="40dp"
        android:backgroundTint="#25dc00"
        android:onClick="start"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 s"
        android:id="@+id/timerText"
        android:textStyle="bold"
        android:textSize="40sp"
        android:background="#ffbcbc"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:id="@+id/scoreText"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="40sp"
        android:padding="5dp"
        android:background="#8c8aff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 + 5"
        android:id="@+id/questionText"
        android:textSize="35sp"
        android:background="#e9da34"
        android:padding="5dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_alignBottom="@+id/timerText"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timerText"

        android:paddingTop="0dp"
        android:layout_alignBottom="@+id/startButton"
        android:id="@+id/answersGrid"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/button1"
            android:tag="1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"

            android:layout_gravity="fill"
            android:background="#ff0000"
            android:textSize="80sp"
            android:onClick="submitAnswer" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/button2"
            android:tag="2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="#00fbff"
            android:textSize="80sp"
            android:onClick="submitAnswer" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/button3"
            android:tag="3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="#f7ff00"
            android:textSize="80sp"
            android:onClick="submitAnswer" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/button4"
            android:tag="4"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="#15ff00"
            android:textSize="80sp"
            android:onClick="submitAnswer" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:id="@+id/resultText"
        android:layout_below="@+id/answersGrid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="40sp" />
</RelativeLayout>
